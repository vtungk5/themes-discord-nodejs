<%- include('../layout/head') %>
    <div class="bg-dark h-100 w-100">
        <div class="d-flex h-100 align-items-center justify-content-center">
            <div class="d-flex justify-content-center ps-3 pe-3 form_auth">
                <div class="card p-4 card-body border-0  bg-dark-4 text-white w-100">
                    <div class="row">
                        <div class="col-12 col-lg-7">
                            <div class="mt-3 w-100 text-center">
                                <div class="text-white fs-21 fw-500">Chào mừng trở lại!</div>
                                <div class="text-gray fs-15 mt-2">Rất vui mừng khi chúng tôi gặp lại bạn!</div>
                            </div>
                            <div class="mt-3">
                                <form method="POST" action="/api/login" data-ajax>
                                    <div class="mb-3">
                                        <label for="account" class="form-label fs-13 text-gray fw-500">EMAIL
                                            HOẶC SỐ
                                            ĐIỆN THOẠI<sub class="text-danger ms-1">*</sub></label>
                                        <input type="text" name="account"
                                            class="input form-control outline-0 box-shadow-none bg-dark text-gray border-0 fs-15"
                                            id="account" aria-describedby="account">
                                    </div>
                                    <div class="mb-1">
                                        <label for="password" class="form-label fs-13 text-gray fw-500">MẬT
                                            KHẨU<sub class="text-danger ms-1">*</sub></label>
                                        <input type="password"
                                        name="password"
                                            class="input form-control outline-0 box-shadow-none bg-dark text-gray border-0 fs-15"
                                            id="password">
                                    </div>
                                    <div class="mb-3">
                                        <a href="#" class="fs-13 text-primary text-decoration-none">Quên mật khẩu</a>
                                    </div>
                                    <button type="submit"
                                        class="btn btn-primary w-100 text-center fw-500 fs-13 input border-0">Đăng
                                        Nhập</button>
                                    <div class="mt-3 d-flex align-items-center">
                                        <span class="fs-13 text-gray">Bạn chưa có tài khoản?</span>
                                        <a href="register"
                                            class="fs-13 text-primary fw-500 text-decoration-none ms-1">Tạo tài
                                            khoản mới</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div
                            class="col-12 d-none d-lg-block d-xxl-block d-xl-block d-md-block d-sm-block mt-lg-0 mt-3 col-lg-5">
                            <div class="mt-3 justify-content-center d-flex flex-column w-100">
                                <div class="qrcode d-flex justify-content-center align-items-center"><%-qrcode%></div>
                                <div class="mt-3 w-100 text-center">
                                    <div class="text-white fs-20 fw-500">Đăng nhập bằng Mã QR</div>
                                    <div class="text-gray fs-13 mt-2">Quét bằng <strong>ứng dụng di động</strong> để
                                        đăng nhập tức thì.</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../layout/script') %>
    <script>

    </script>
    <%- include('../layout/end') %>